<!--login.wxml-->

<view class='cell-row margin20'>
  <input bindinput="inputPhoneChange" placeholder="请输入手机号" value='{{phoneNumber}}' auto-focus />
</view>
<view class='cell-row checkcode-row'>
  <input bindinput="inputCheckcodeChange" placeholder="请输入验证码" value='{{checkcode}}' auto-focus />
  <button bindtap='onCheckCode' class='checkcode-btn'>获取验证码</button>
</view>
<button bindtap='onLogin' class='login-btn'>登录</button>
