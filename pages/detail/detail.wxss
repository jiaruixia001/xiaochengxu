/* pages/detail/detail.wxss */
.detail-swiper {
  width: 100%;
  height: 750rpx;
}
.banner-image{
  width: 100%;
  height: 100%;
} 
.product-info {
  padding: 0 30rpx 36rpx;  
  border-bottom: 16rpx solid #f5f5f5;
}
.product-info .product-title {
  font-size: 34rpx;
  color: #353535;
  line-height: 40rpx;
  margin-top: 36rpx;
}
.price-wrap {
  overflow: hidden;
}
.fn-left {
  float: left;
}
.price-wrap  .fn-left {
  width: 33.3%;
}
.price-one {
  font-size:26rpx;
  line-height:52rpx;
  color: #FF6800;
}
.price-one text{
  font-size:52rpx;
}
.price-two {
  font-size:24rpx;
  line-height:24rpx;
  color: #888888;
  text-decoration: line-through;
  margin-top: 8rpx;
}
.number {
  font-size:24rpx;
  line-height: 36rpx;
  text-align: center;
  width:112rpx;
  height:36rpx;
  color: #888888;
  background:rgba(245,245,245,1);
  border-radius:2rpx;
  margin-top: 8rpx;
}
.price-one-line .price-one,
.price-one-line .price-two{
  float: left;
  line-height: 52rpx;
  margin-right: 8rpx;
}
.price-one-line .number {
  float: right;
  margin-top: 10rpx;
}
.choose-size {
  width:100%;
  height:104rpx;
  line-height: 104rpx;
  padding: 0 30rpx;
  border-bottom: 16rpx solid #f5f5f5;
}
.company-info {
  padding: 30rpx;
  overflow: hidden;
  border-bottom: 16rpx solid #f5f5f5;
}
.company-info .left-logo{
  float: left;
  width: 88rpx;
  height: 88rpx;
  background: #f5f5ff;
  border-radius: 100%;
}
.company-info .company-name {
  float: left;
  width:366rpx;
  height:42rpx;
  font-size:30rpx;
  color:rgba(53,53,53,1);
  line-height:42rpx;
  margin-left: 16rpx;
}
.company-info .go-shop{
  float: right;
font-size:28rpx;
color:rgba(136,136,136,1);
line-height:88rpx;
}
.recommend-product {
  padding: 34rpx 30rpx;
  border-bottom: 16rpx solid #f5f5f5;
}
.recommend-product .recommend-title {
  font-size:28rpx;
  font-weight:400;
  color:rgba(136,136,136,1);
  line-height:40rpx;
}
.recommend-product  .ul {
  overflow: hidden;
  margin-top: 30rpx;
}
.recommend-product  .ul .li {
  float: left;
  margin-right: 16rpx;
}
.recommend-product  .ul .li:last-child {
  margin-right: 0rpx;
}
.recommend-product  .img-wrap {
  width:219rpx;
height:219rpx;
background: #dfdfdf;
}
.recommend-product  .recomment-money {
  font-size: 22rpx;
  color: #FF6800;
  line-height: 36rpx;
  text-align: center;
  margin-top: 16rpx;
}
.recommend-product  .recomment-money text {
  font-size: 36rpx;
  line-height: 36rpx;
}
.goods-detail {
  border-bottom: none;
}
.goods-detail .recommend-title {
  margin-top: 8rpx;
}
.goods-detail .one-line {
font-size:28rpx;
color:rgba(53,53,53,1);
line-height:40rpx;
margin-top: 16rpx;
}
.goods-detail .one-line text {
  color: #888888;
  margin-right: 16rpx;
}
.detail-info {
  margin-top: 30rpx;
  border-top: 1rpx solid #b2b2b2;
}
.display-icon {
  text-align: center;
  font-size: 24rpx;
  color: #b2b2b2;
  line-height: 85rpx;
}
.detail-info image {
  display: block;
  width:100%;
}
.tool-bar {
  height: 120rpx;
  padding: 0;
}
.tool-bar .shop {
  display: inline-block;
  font-size: 24rpx;
  line-height: 34rpx;
}
.tool-bar .btn {
  display: inline-block;
  width:240rpx;
  height:88rpx;
  font-size: 34rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius:4px;
  margin-top: 16rpx;
}
.tool-bar .btn1 {
  color: #ff6800;
  border:1px solid rgba(247,186,42,1);
  background:rgba(245,190,89,0.25);
  margin-left: 20rpx;
}
.tool-bar .btn2 {
  color: #fff;
  border:1px solid #FF6800;
  background:#FF6800;
  margin-left: 10rpx;
}

/* 弹出框 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 900;
  color: #fff;
}
.modal-dialog {
  width: 100%;
  position: absolute;
  bottom: 0;
  background: #fff;
  z-index: 9000;
}
.modal-dialog .number-ctrl {
  float: right;
  overflow: hidden;
  border:1px solid rgba(192,192,192,1);
  border-radius: 8rpx;
}
.modal-dialog .ctrl-btn {
  float: left;
  width: 68rpx;
  height: 68rpx;
  font-size: 40rpx;
  line-height: 68rpx;
  text-align: center;
  border: none;
  background:rgba(245,245,245,1);
}
.modal-dialog .num-ipt {
  float: left;
  width: 104rpx;
  height: 68rpx;
  font-size: 32rpx;
  color: #6e6e6e;
  line-height: 68rpx;
  text-align: center;
  border-left:1px solid rgba(192,192,192,1);
  border-right:1px solid rgba(192,192,192,1);
}
.modal-dialog .left .s-title{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(53,53,53,1);
  line-height:30rpx;
}
.modal-dialog .left .s-price {
  font-size:24rpx;
  color:rgba(136,136,136,1);
  line-height:26rpx;
}
.modal-dialog .right {
  position: relative;
}