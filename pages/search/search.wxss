/* search.wxss */
.sch-wrap {
  position: relative;
  margin-left: 30rpx;
  overflow: hidden;
  padding-bottom: 12rpx;
}
.sch-wrap icon {
  position: absolute;
  top: 16rpx;
  left: 24rpx;
}
.sch-wrap input {
  float: left;
  width:602rpx;
  height:64rpx;
  font-size: 28rpx;
  color: #B2B2B2;
  background:rgba(243,243,243,1);
  border-radius:4rpx;
  opacity:0.9;
  padding-left: 80rpx;  
  box-sizing: border-box;
}
.sch-wrap .sch-btn {
  float: left;
  width:56rpx;
  height:28rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(33,33,33,1);
  line-height:28rpx;
  margin-top: 20rpx;
  margin-left: 30rpx;
}
.goods-item-wrapper{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  padding:0 30rpx;
  margin-top: 16rpx;
}
.goods-item{
  display: flex;
  flex-direction: column;
  width: 48%;
}
.goods-item{
  margin-bottom: 36rpx;
}

.goods-item .logo-url{
  width: 100%;
  height: 336rpx;
  background:rgba(245,245,245,1);
  border-radius:4rpx;
}
.goods-item .title{
  margin-top: 18rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  height: 80rpx;
  color:rgba(110,110,110,1);
}
.price-line{
  display: flex;
  flex-direction: row;
  justify-content: space-between
}
.price-line .price{
  font-size:36rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(255,104,0,1);
}
.price-line .info{
  margin-top: 14rpx;
  background:rgba(245,245,245,1);
  border-radius:2rpx;
  padding: 6rpx 10rpx;
  font-size:22rpx;
  font-weight:400;
  color:rgba(110,110,110,1);
  line-height:22rpx;
}
.goods-no-data {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  line-height: 40rpx;
  color: #9e9e9e;
}