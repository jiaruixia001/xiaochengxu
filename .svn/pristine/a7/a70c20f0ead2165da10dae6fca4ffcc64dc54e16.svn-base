/* home.wxss */

swiper {
  height: 400rpx;
  width: 100%;
}
.banner-image{
  width: 100%;
  height: 100%;
}
/* 商品bar */
.goods-bar-wrapper{
  display: flex;
  flex-direction: row;
}
/* 商品bar > 右边的搜索按钮 */
.goods-bar-wrapper .search-icon-wrapper{
  width: 92rpx;
  height: 88rpx;
  text-align: center;
  background:#F5F5F5;
  border-left: 2rpx solid rgba(176, 176, 176, 0.856);
}
.goods-bar-wrapper .search-icon-wrapper > icon{
  position:relative;
  top:22rpx;
}
/* 商品bar > 左边的title */
.tab-header{
  box-sizing: border-box;
  width: 100%;
  height: 88rpx; 
  overflow: hidden;
  background: #F7F7F7; 
  font-size: 28rpx; 
  white-space: nowrap;
}

.tab-item{
  display: inline-block;
  position: relative;
  margin:18rpx 30rpx;
  color: #353535;
}
.tab-item.active{
  background: #ff6800;
  border-radius: 4rpx;
  color: #ffffff;
  padding: 6rpx 14rpx;
}

.type-wrapper{
  background: #ffffff;
  margin: 0 30rpx;
}
.type-wrapper > .title{
  display: flex;
  justify-content: center;
  align-items: center;
}
.small-star-item{
  width:26rpx;
  height:26rpx;
  background:rgba(245,190,89,0.4);
  border-radius:1rpx;
  transform: rotate(45deg)
}
.type-wrapper > .title > text{
  font-size:36rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,104,0,1);
  line-height:50px;
  margin: 0 20rpx;
}

.goods-item-wrapper{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.goods-item{
  display: flex;
  flex-direction: column;
  width: 48%;
}
.goods-item + .goods-item{
  margin-bottom: 36rpx;
}

.goods-item .logo-url{
  width: 100%;
  height: 336rpx;
  background:rgba(245,245,245,1);
  border-radius:4rpx;
}
.goods-item .title{
  margin-top: 18rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  height: 80rpx;
  color:rgba(110,110,110,1);
}
.price-line{
  display: flex;
  flex-direction: row;
  justify-content: space-between
}
.price-line .price{
  font-size:36rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(255,104,0,1);
}
.price-line .info{
  margin-top: 14rpx;
  background:rgba(245,245,245,1);
  border-radius:2rpx;
  padding: 6rpx 10rpx;
  font-size:22rpx;
  font-weight:400;
  color:rgba(110,110,110,1);
  line-height:22rpx;
}

.home-footer{
  padding: 0 32rpx 30rpx 32rpx;
  background:rgba(245,245,245,1);
  font-size:22rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(178,178,178,1);
  line-height: 30rpx;
  text-align: center;
}
.home-footer > .no-more{
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
}
.hori-line-dot{
  width: 100%;
  height:2rpx;
  border:1rpx solid rgba(222,222,222,1);
}
.home-footer > .title{
  display: inline-block;
  margin-top: 28rpx;
}
.home-footer > .content{
  text-align: left;
}

@keyframes box-ani {
  from {opacity: 1}
  to {opacity: 0}
}
.box-hidden-animation {
  animation: box-ani 1s;
}